<title>Articles</title>

<%- include('./components/header2.ejs') %> 

<div class="container">
    <form action="/<%= RouteLocation %> " method="POST">
        <div class="mb-3 mx-5 my-5">
            <label for="exampleFormControlInput1" class="form-label">Enter the title of the Articles</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="title" placeholder="Enter the title" value="<%= articleData.title %> ">
        </div>
        <div class="mb-3 mx-5 my-2">
            <label for="exampleFormControlTextarea1" class="form-label">Enter the description of the articles</label>
            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="5"><%= articleData.description %></textarea>
        </div>
        <button type="submit" class="btn btn-dark mx-5"><%= work %>  The Article</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>