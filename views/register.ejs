<title>Register New User</title>
<link rel="stylesheet" href="/style.css">

<form action="" method="post"></form>
<div class="container">
        
    <form class="login-form" action="/register" method="POST">
        <h2 class="heading">Sign Up</h2>
        <input type="text" class="input" name="username" placeholder="Username" value="<%= locals.username %>" >
        <input type="text" class="input" name="email" placeholder="Email" value="<%= locals.email %>" >
        <input type="password" class="input" name="password" value="<%= locals.password %>" placeholder="Password" >
        <input type="password" class="input" name="confirmPassword" placeholder="Confirm Password" >
        <button type="submit" class="btn">Sign Up</button>
        <div class="row"> 
        <label class="checkbox"><input type="checkbox"> Remember me</label>
        <a href="/login" class="forgot-pass">Forgot Password?</a>
        <br>
        <br>
        <p class="signUp"><a href="/login">Already have an Account</a></p>
        </div>
            
    </form>
    <p class="signUp"><a href="/">Explore </a></p>
</div>
