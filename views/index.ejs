<title>Home Page - Mini Auth</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<%- include('./components/header1.ejs') %> 


<div class="col-md-6 mx-5 my-5">
  <div class="h-100 p-5 text-light  bg-secondary rounded-3">
    <h2>Mini-Authentication-System</h2>
    <p>This is a project built based on Learning Backend Development. This uses Express MongoDb and some of the other frameworks to built this Project. In this Project the user can SignUp to our website and then LogIn to write Articles which can only be viewed to the User </p>
    <button class="btn btn-danger my-3" type="button">Learn More</button>
  </div>
</div>

<div class="container col-md-6 ">
    <h2>Here are some of the recent articles</h2>
    <hr>
  <% articles.reverse().forEach(element => { %>
    <% user.forEach(value => { %>
      <% if (String(element.user) === String(value._id)) {%>
        <div class="h-100 p-5 bg-dark text-light border rounded-3 mx-3 my-4">
          <strong class="d-inline-block mb-2 text-danger"><%= value.username %></strong>
        <div class="mb-1 text-muted"><%= element.createdAt %></div>
        <h2><%= element.title %> </h2>
        <p><%= element.description %></p>
      </div>
      <% } %> 
 
    <% }); %>  
  <% }); %>  
  </div>

    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
