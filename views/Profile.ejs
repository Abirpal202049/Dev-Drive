<title>Profile</title>
<%- include('./components/header2.ejs') %> 

<div>
    <center>
    <div>
        <img src="https://www.pngitem.com/pimgs/m/78-786293_1240-x-1240-0-avatar-profile-icon-png.png" alt="profileImage" width="200" height="200" class="rounded-circle mx-3">
        <h2><%= SelectedUser.username %></h2>
        <p><%= SelectedUser.email %></p>  
    </div>
    </center>
</div>

<center>
<div class="justify-content-center container row row-cols-1 row-cols-md-3 g-4">

    <% article.reverse().forEach(element => { %>
        <div class="col">
            <div class="card text-dark bg-light mx-3 my-2 h-100">
                <div class="card-header bg-dark text-light"><%= element.title %></div>
                <div class="card-body">
                <p class="card-text"><%= element.description %></p>
                </div>
                <div class="card-footer">
                    <%- include('./components/dayago.ejs') %> 
                    <small class="text-muted"><%= daysago(element.updatedAt) %></small>
                </div>
            </div>
            
        </div>
        
        
      <% }); %>
</div>
</center>

<div class="container mx-5 my-5"></div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
